import testing ;


project
    : requirements
      $(c11-requires)
      <source>include/main.cpp
      <include>include
    ;


local SOURCES =
    _detail_char_type.cpp
    _detail_parse.cpp
    error.cpp
    host_type.cpp
    scheme.cpp
    static_pool.cpp
    storage_ptr.cpp
    url.cpp
    url_view.cpp
    urls.cpp
    ;
for local f in $(SOURCES)
{
    run $(f) /boost/url//boost_url ;
}

local LIMIT_SOURCES =
    ;
for local f in $(LIMIT_SOURCES)
{
    run $(f) include/main.cpp /boost/url//url_sources ;
}
